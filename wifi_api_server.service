[Unit]
Description=WiFi API Server
After=network.target

[Service]
Type=simple
# APP_DIR environment variable should be set via systemd Environment directive
# Example: Environment="APP_DIR=/custom/path"
Environment="WIFI_SERVER_PORT=8080"
WorkingDirectory=/app/wifi-connect
ExecStart=/usr/local/bin/wifi_api_server
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

